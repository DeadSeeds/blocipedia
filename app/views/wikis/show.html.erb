

<div class="container-fluid">


  <div class="row">
    <div class="col-md-11">
      <%= link_to "Home", wikis_path, class: 'btn btn-info btn-sm' %>
      <%= link_to "Edit Wiki", edit_wiki_path, class: 'btn btn-warning btn-sm' %>
      <% if policy(@wiki).destroy? %>
        <%= link_to "Delete Wiki", @wiki, method: :delete, class: 'btn btn-danger btn-sm', data: {confirm: 'Are you sure you want to delete this wiki?'} %>
      <% end %>
    </div>
  </div>
  <div class="jumbotron">
    <center><h2><%= @wiki.title %></h2></center>
  </div>
  <div class="row">
    <div class="col-md-11">
      <p><%= markdown @wiki.body %></p>
    </div>

  </div>
</div>
