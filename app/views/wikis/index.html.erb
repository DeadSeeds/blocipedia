<div class="container-fluid">

  <div class="row">
    <div class="col-md-11">
      <%= link_to "New Wiki", new_wiki_path, class: 'btn-group btn-success btn-sm' %>
      <% if current_user %>
        <% if current_user.role == "standard" %>
          <%= link_to "Upgrade account", { controller: 'users/upgrade', user_id: @user.id, action: :index }, class: 'btn btn-info btn-sm' %>
        <% elsif current_user.role == "premium" %>
            <%= link_to "Downgrade account", { controller: 'users/downgrade', user_id: @user.id, action: :index }, class: 'btn btn-danger btn-sm' %>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="jumbotron">
    <center><h1>Blocipedia</h1></center>
    <center><h2>Look stuff up!</h2></center>
  </div>

  <div class="row">
    <div class="col-md-11">
      <% @wikis.each do |wiki| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= link_to wiki.title, wiki %>
            <% if @user.present? %>
              <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            <% end %>
            <% if wiki.private? %>
              <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
            <% end %>
          </h4>
        </div>
      </div>
      <% end %>
      <% if @user == nil %>
      <% elsif @user.role == "premium" || @user.role == "admin" %>
        <% @wikis_priv.each do |wik| %>
        <div class="media">
          <div class="media-body">
            <h4 class="media-heading">
              <%= link_to wik.title, wik %>
              <% if @user.present? %>
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
              <% end %>
              <% if wik.private? %>
                <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
              <% end %>
            </h4>
          </div>
        </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
